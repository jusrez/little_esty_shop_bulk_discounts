<h2><u>Upcoming Holidays</u></h2>
<% @holidays.next_three_holidays.each do |holiday| %>
  <ul>
  <li> <%= holiday['name'] %>: <%= holiday['date'] %> </li>
  </ul>
<% end %>


<% @merchant.discounts.each do |discount| %>
<div id = "discount-<%= discount.id %>">
<h4><%= link_to "Discount ##{discount.id}", "/merchant/#{@merchant.id}/discounts/#{discount.id}" %></h4>
<ul>
<li> Percentage Discount: <%= number_to_percentage(discount.percentage_discount, precision: 0) %></li>
<li> Quantity Threshold: <%= discount.quantity_threshold %></li>
</ul>
<p><%= button_to "Delete Discount", "/merchant/#{@merchant.id}/discounts/#{discount.id}", method: :delete %></p>
</div>
<% end %>
<br>

<h3><%= link_to "Create New Discount", new_merchant_discount_path(@merchant.id) %></h3>